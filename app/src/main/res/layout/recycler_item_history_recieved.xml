<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/dashed_white_line" android:id="@+id/view6"
        android:layout_below="@+id/layout"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/layout" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <TextView
            android:text="15.02.17"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/textView3"
            android:layout_weight="1" android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white" android:textSize="20sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent" app:srcCompat="@mipmap/received_coins"
            android:id="@+id/imageView2" android:layout_weight="0.4"/>
        <TextView
            android:text="13.14 HC"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/textView4"
            android:layout_weight="1" android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white" android:textSize="20sp"/>
    </LinearLayout>
</RelativeLayout>
