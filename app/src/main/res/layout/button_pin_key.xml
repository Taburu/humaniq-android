<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/animalImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.497"
        app:layout_constraintDimensionRatio="h,1:1" app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="12dp" android:layout_marginRight="12dp"
        android:padding="10dp"
        android:background="@drawable/rounded_rect_white_small_radius"
    />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp" app:srcCompat="@drawable/ic_success"
        android:id="@+id/iconImageView"
        app:layout_constraintTop_toTopOf="@+id/animalImageView"
        android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/animalImageView" android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/animalImageView"
        app:layout_constraintLeft_toRightOf="@+id/animalImageView" android:layout_marginLeft="0dp"
        android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>