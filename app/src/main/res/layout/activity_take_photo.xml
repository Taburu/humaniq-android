<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="co.humaniq.views.GreeterActivity"
    android:background="@color/darkBlue">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp" app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp" app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/lightBlue" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp" android:paddingTop="20dp" android:paddingBottom="20dp"
        android:id="@+id/linearLayout2" app:layout_constraintHorizontal_bias="0.0">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent" app:srcCompat="@drawable/check"
            android:id="@+id/imageButton4" android:layout_weight="1"
            android:background="@drawable/selector_bottom_menu_button"
            android:scaleType="fitCenter" android:layout_margin="10dp" android:tint="@color/white"
            android:padding="10dp"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/camera"
            android:id="@+id/imageButton"
            style="@style/RegularButton" tools:layout_editor_absoluteY="454dp"
            tools:layout_editor_absoluteX="73dp"
            android:paddingBottom="20dp" android:paddingTop="20dp"
            android:scaleType="fitCenter" android:elevation="0dp"
            android:layout_margin="10dp" android:layout_weight="1.7"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent" app:srcCompat="@drawable/loop"
            android:id="@+id/imageButton5" android:layout_weight="1"
            android:background="@drawable/selector_bottom_menu_button"
            android:scaleType="fitCenter" android:layout_margin="10dp" android:tint="@color/white"
            android:padding="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/silhouette_with_bg"
        app:layout_constraintDimensionRatio="h,1:1" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" tools:layout_editor_absoluteY="0dp">
        <TextView
            style="@style/ToolbarTitle"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_title"/>
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   app:srcCompat="@mipmap/logo" android:paddingTop="15dp"
                   android:paddingBottom="15dp" android:id="@+id/toolbar_logo"/>
    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>
